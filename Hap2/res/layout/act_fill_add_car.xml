<?xml version="1.0" encoding="utf-8"?>
<!-- Top-level content view for the layout fragment sample. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/frag_header"
        android:name="com.airbiquity.hap.FragAppHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_app_header" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- Main Layout -->
        <LinearLayout
            android:id="@+id/v_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editYear"
                style="@style/TxtEdit"
                android:hint="@string/hint_year"
                android:inputType="number" />

            <EditText
                android:id="@+id/editModel"
                style="@style/TxtEdit"
                android:hint="@string/hint_model"
                android:inputType="text" />

            <EditText
                android:id="@+id/editNick"
                style="@style/TxtEdit"
                android:hint="@string/hint_nick"
                android:inputType="text" />

            <EditText
                android:id="@+id/editVin"
                style="@style/TxtEdit"
                android:hint="@string/hint_vin"
                android:inputType="text" />

            <Button
                android:id="@+id/btnOk"
                style="@style/BtnGray"
                android:onClick="btnOk"
                android:text="@android:string/ok" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>