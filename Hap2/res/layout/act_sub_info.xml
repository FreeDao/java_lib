<?xml version="1.0" encoding="utf-8"?>
<!-- Top-level content view for the layout fragment sample. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/frag_header"
        android:name="com.airbiquity.hap.FragAppHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_app_header" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscription Details" />
    
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    
    <Button
        android:id="@+id/btnUpdate"
        style="@style/BtnGray"
        android:onClick="btnUpdate"
        android:text="Update" />

    <Button
        android:id="@+id/btnDelete"
        style="@style/BtnGray"
        android:onClick="btnDelete"
        android:text="Cancel and Remove Vehicle" />

</LinearLayout>