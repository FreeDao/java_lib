<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/frag_header"
        android:name="com.airbiquity.hap.FragAppHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/frag_app_header" />


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editNameOnCard"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Name on the Card"
                android:inputType="textPersonName" >
            </EditText>

            <EditText
                android:id="@+id/editCardNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Card Number"
                android:inputType="number" >
            </EditText>

            <EditText
                android:id="@+id/editExpDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Expiration Date"
                android:inputType="date" >
            </EditText>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Billing Address" />

            <EditText
                android:id="@+id/editFullName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Full Name"
                android:inputType="textPersonName" >
            </EditText>

            <EditText
                android:id="@+id/editAddrLine1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Address Line 1"
                android:inputType="textPostalAddress" >
            </EditText>

            <EditText
                android:id="@+id/editAddrLine2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Address Line 2"
                android:inputType="textPostalAddress" >
            </EditText>

            <EditText
                android:id="@+id/editCity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="City"
                android:inputType="textPostalAddress" >
            </EditText>

            <EditText
                android:id="@+id/editState"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="State/Province/Region"
                android:inputType="textPostalAddress" >
            </EditText>

            <EditText
                android:id="@+id/editZip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Zip"
                android:inputType="number" >
            </EditText>

            <EditText
                android:id="@+id/editCountry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Country"
                android:inputType="textPostalAddress" >
            </EditText>

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="Phone"
                android:inputType="phone" >
            </EditText>


            <!-- Save -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="@string/save" />

            <!-- Cancel -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="@string/cancel" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>