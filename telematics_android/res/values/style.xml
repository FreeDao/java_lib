<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mapliststar">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:src">@drawable/stat_sample</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="weatherLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="weatherItem">
        <item name="android:layout_width">107dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="weatherForcastItem">
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">87dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="weatherfront_big">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="weatherfront_mid">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="weatherfront_little">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="weatherfront_little2">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content">
        <item name="android:paddingTop">38dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="login_icon_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_btn_style">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_input_layout">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="login_input_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="remember_username">
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="violation_grid">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="violation_summary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="violation_times">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="friend_dialog" parent="android:style/Theme.Dialog">

        <item name="android:windowNoTitle">true</item>
    </style>

</resources>