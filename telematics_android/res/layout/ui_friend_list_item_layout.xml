<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/friend_index"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@drawable/frinend_index_background"
        android:paddingLeft="5dp" />

    <LinearLayout
        android:id="@+id/frienditem_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingLeft="8dp" >

        <ImageView
            android:id="@+id/friend_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/violation_sample_car" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/friend_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/friend_add_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>